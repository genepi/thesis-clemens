<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>at.ac.uibk.mapreduce-fastq-baseQual-combiner.thesis.banas</groupId>
  <artifactId>Mapreduce_FastQ_BaseQual_Combiner</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <mainClass>baseQual.FastQ_PerBaseQual_Job</mainClass>
            </transformer>
          </transformers>
          <artifactSet>
            <includes>
              <include>seqdoop:*</include>
            </includes>
          </artifactSet>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
      <id>genepi-hadoop</id>
      <url>https://raw.github.com/genepi/maven-repository/mvn-repo/</url>
    </repository>
    <repository>
      <id>project.local</id>
      <name>project</name>
      <url>file://${basedir}/libs</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>genepi</groupId>
      <artifactId>genepi-hadoop</artifactId>
      <version>yarn-1.0.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <genepi-yarn.version>yarn-1.0.0</genepi-yarn.version>
    <hadoop-bam.version>7.3.1</hadoop-bam.version>
    <maven-shade-plugin.version>2.4.1</maven-shade-plugin.version>
  </properties>
</project>

