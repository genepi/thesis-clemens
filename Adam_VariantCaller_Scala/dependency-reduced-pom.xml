<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>at.ac.uibk.adam-variantcaller-scala.thesis.banas</groupId>
  <artifactId>Adam_VariantCaller_Scala</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <mainClass>main.scala.NaiveVariantCaller_Job</mainClass>
            </transformer>
          </transformers>
          <artifactSet>
            <includes>
              <include>org.bdgenomics.*:*:*:*</include>
              <include>org.apache.parquet:*:*:*</include>
              <include>com.github.samtools:*:*:*</include>
              <include>com.netflix.servo:*:*:*</include>
              <include>com.google.guava:*:*:*</include>
              <include>it.unimi.dsi:*:*:*</include>
              <include>seqdoop:*</include>
            </includes>
          </artifactSet>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
      <id>genepi-hadoop</id>
      <url>https://raw.github.com/genepi/maven-repository/mvn-repo/</url>
    </repository>
    <repository>
      <id>project.local</id>
      <name>project</name>
      <url>file://${basedir}/libs</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>genepi</groupId>
      <artifactId>genepi-hadoop</artifactId>
      <version>yarn-1.0.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <adam.version>0.18.2</adam.version>
    <fastutil.version>7.0.8</fastutil.version>
    <htsjdk.version>1.139</htsjdk.version>
    <java.version>1.8</java.version>
    <utils.version>0.2.3</utils.version>
    <guava.version>16.0.1</guava.version>
    <parquet.version>1.8.1</parquet.version>
    <genepi-yarn.version>yarn-1.0.0</genepi-yarn.version>
    <netflix-server.version>0.12.2</netflix-server.version>
    <bdg-formats.version>0.6.1</bdg-formats.version>
  </properties>
</project>

