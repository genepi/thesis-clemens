<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>at.ac.uibk.piggene.thesis.banas</groupId>
  <artifactId>PigGene</artifactId>
  <version>1.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <mainClass>NaiveVariantCaller.NaiveVariantCaller_Job</mainClass>
            </transformer>
          </transformers>
          <artifactSet>
            <includes>
              <include>org.apache.pig:*</include>
              <include>org.apache.commons:*</include>
            </includes>
          </artifactSet>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
      <id>genepi-hadoop</id>
      <url>https://raw.github.com/genepi/maven-repository/mvn-repo/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>genepi</groupId>
      <artifactId>genepi-hadoop</artifactId>
      <version>yarn-1.0.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>commons-cli</groupId>
      <artifactId>commons-cli</artifactId>
      <version>1.3.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.2</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <genepi-yarn.version>yarn-1.0.0</genepi-yarn.version>
    <maven-shade-plugin.version>2.4.1</maven-shade-plugin.version>
    <commons-logging.version>1.2</commons-logging.version>
    <pig.version>0.15.0</pig.version>
    <commons-cli.version>1.3.1</commons-cli.version>
  </properties>
</project>

